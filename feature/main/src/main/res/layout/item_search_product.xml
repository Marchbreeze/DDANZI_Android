<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="3dp"
        android:paddingBottom="4dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_search_item"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="14dp"
            app:cardElevation="0dp"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_search_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/gray_1"
                android:scaleType="centerCrop"
                tools:src="@drawable/mock_img_product" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/btn_search_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/shape_tran30_fill_100_rect"
            android:elevation="1dp"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp"
            android:paddingTop="6dp"
            android:paddingBottom="5dp"
            app:layout_constraintEnd_toEndOf="@id/cv_search_item"
            app:layout_constraintTop_toTopOf="@id/cv_search_item">

            <ImageView
                android:id="@+id/iv_search_item_like"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="center"
                android:src="@drawable/sel_item_like_white" />

            <TextView
                android:id="@+id/tv_search_item_like"
                style="@style/TextAppearance.DDanzi.Body6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="3dp"
                android:textColor="@color/white"
                android:textSize="9sp"
                tools:text="999+" />

        </LinearLayout>

        <co.orange.core.custom.MultiLineTextView
            android:id="@+id/tv_search_item_title"
            style="@style/TextAppearance.DDanzi.Body3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:lineSpacingMultiplier="1.0"
            android:maxLines="2"
            android:minLines="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cv_search_item"
            tools:text="@string/ex_item_title" />

        <TextView
            android:id="@+id/tv_search_item_real_price"
            style="@style/TextAppearance.DDanzi.Body6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="7dp"
            android:textColor="@color/gray_3"
            app:layout_constraintBottom_toBottomOf="@id/tv_search_item_now_price"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="@string/ex_item_real_price" />

        <TextView
            android:id="@+id/tv_search_item_now_price"
            style="@style/TextAppearance.DDanzi.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="6dp"
            app:layout_constraintEnd_toEndOf="@id/tv_search_item_title"
            app:layout_constraintTop_toBottomOf="@id/tv_search_item_title"
            tools:text="@string/ex_item_now_price" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>