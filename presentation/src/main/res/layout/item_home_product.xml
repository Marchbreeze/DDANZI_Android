<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="2dp"
        android:paddingBottom="4dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_home_item"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="14dp"
            android:elevation="0dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_home_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/gray_1"
                android:scaleType="centerCrop"
                tools:src="@drawable/mock_img_product" />

        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/btn_item_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="3dp"
            android:elevation="2dp"
            android:padding="6dp"
            android:src="@drawable/sel_item_like_white"
            app:layout_constraintEnd_toEndOf="@id/cv_home_item"
            app:layout_constraintTop_toTopOf="@id/cv_home_item" />

        <TextView
            android:id="@+id/tv_home_item_title"
            style="@style/TextAppearance.DDanzi.Body3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="14dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:minLines="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cv_home_item"
            tools:text="@string/ex_item_title" />

        <TextView
            android:id="@+id/tv_home_item_real_price"
            style="@style/TextAppearance.DDanzi.Body6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:textColor="@color/gray_3"
            app:layout_constraintEnd_toEndOf="@id/tv_home_item_title"
            app:layout_constraintStart_toStartOf="@id/tv_home_item_title"
            app:layout_constraintTop_toBottomOf="@id/tv_home_item_title"
            tools:text="@string/ex_item_real_price" />

        <TextView
            android:id="@+id/tv_home_item_now_price"
            style="@style/TextAppearance.DDanzi.Body2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            app:layout_constraintEnd_toEndOf="@id/tv_home_item_title"
            app:layout_constraintStart_toStartOf="@id/tv_home_item_title"
            app:layout_constraintTop_toBottomOf="@id/tv_home_item_real_price"
            tools:text="@string/ex_item_now_price" />

        <TextView
            android:id="@+id/tv_home_item_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="3dp"
            android:fontFamily="@font/font_pretendard_medium"
            android:textColor="@color/black"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@id/tv_home_item_now_price"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="@string/ex_item_like" />

        <ImageView
            android:id="@+id/iv_home_item_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:src="@drawable/ic_like"
            app:layout_constraintBottom_toBottomOf="@id/tv_home_item_like"
            app:layout_constraintEnd_toStartOf="@id/tv_home_item_like"
            app:layout_constraintTop_toTopOf="@id/tv_home_item_like" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>